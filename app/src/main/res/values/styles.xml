<resources>
    <!-- Dark application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- background of the list menu -->
        <item name="background">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
        <!-- dividers -->
        <item name="android:divider">@color/colorAccent</item>
        <item name="divider">@color/colorAccent</item>
        <item name="android:dividerHeight">1dip</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- background of the list menu -->
        <item name="background">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
        <!-- dividers -->
        <item name="android:divider">@color/colorAccent</item>
        <item name="divider">@color/colorAccent</item>
        <item name="android:dividerHeight">1dip</item>
    </style>

    <style name="AppTheme.TextView.NoData" parent="AppTheme">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">@dimen/no_data_padding</item>
        <item name="android:textSize">@dimen/no_data_textSize</item>
    </style>

    <!-- Light application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
